<html>
  <head>
    <title><%= title %></title>
    <style>
      body {
        margin: 0;
        background-color: midnightblue;
      }
      h1 {
        color: white;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <h1>Contact List</h1>
    <ul>
      <% for (let i of contact_list) {%>
      <li>
        <p><%= i.name %></p>
        <p><%= i.phone %></p>
      </li>
      <% } %>
    </ul>

    <form action="/create_contact" method="POST">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input
        type="number"
        name="phone"
        placeholder="Enter Phone Number"
        required
      />
      <button type="submit">Add Contact</button>
    </form>
  </body>
</html>
